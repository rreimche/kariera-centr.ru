 </nav>




<div class="container-fluid">
	<div class="row">
		<% if not 'homepage_controller' == controller_name %>
			<main class="col-xs-6">
				<%= yield %>
			</main>
			<aside class="col-xs-4 coll-xs-offset-2">
				<%= render 'layouts/sidebar' %>
		    </aside>
		<% else %>
			<main class="col-xs-12">
				<%= yield %>
			</main>
		<% end %>
	</div>
</div>

