  <link rel="shortcut icon" href="http://kariera-centr.ru/favicon.ico" />
  <link rel="icon" sizes="32x32" href="/favicon.ico">
  <link rel="alternate" type="application/rss+xml" title="Новости учебно-кадрового центра Карьера" href="http://kariera-centr.ru/news/feed?format=rss">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,400italic,600italic,700italic&subset=latin,cyrillic-ext,latin-ext,cyrillic" rel="stylesheet" type="text/css">
  <% if cookies[:is_admin] != "true" %>
          <!-- Google Analytics -->
          <script>
