</div>


<div class="row" id="threeblocks">
  <div id="news" class="col-sm-4">
    <h4>Новости</h4>
    <ul class="list-group">
        <% @news.each do | news | %>
          <li class="list-group-item"><%= link_to truncate( strip_tags(news.content), length: 75), news %><span><small><%= l news.created_at, format: :simpledate %></small></span></li>
        <% end %>
    </ul>
    <button type="button" class="btn btn-xs btn-default center-block">
      <%= link_to 'Все новости...', news_index_path %>
    </button>
  </div>
  <div id="nextcourses" class="col-sm-4">
    <h4>Ближайшие курсы</h4>
    <div class="list-group">
      <% @courses_next.each do |course| %>
        <li class="list-group-item"><%= link_to course.title, course %><br><span class="text-muted"><small><%= l course.start_date, format: :simpledate %></small></span></li>
      <% end %>
    </div>
    <button type="button" class="btn btn-xs btn-default center-block">
      <%= link_to 'Все курсы...', { controller: 'courses', action: 'search' } %>
    </button>
  </div>
  <div id="feedbackvids" class="col-sm-4" style="text-align:center">
