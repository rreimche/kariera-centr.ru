<%= form_for(@static_page) do |f| %>
  <% if @static_page.errors.any? %>
    <p id="error_explanation">
      <h2><%= pluralize(@static_page.errors.count, "error") %> prohibited this static_page from being saved:</h2>

      <ul>
      <% @static_page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </p>
  <% end %>

  <%= raw("<h3 class=\"text-danger\">#{flash[:notice]}</h3>") if not flash[:notice].nil? %>

  <p class="field">
    <%= f.label "Заголовок" %><br>
    <%= f.text_field :title %>
  </p>
  <p class="field">
    <%= f.label "Подзаголовок" %><br>
    <%= f.text_field :subtitle %>
  <p class="field">
    <%= f.label "Содержание" %><br>
    <%= f.cktext_area :content, :ckeditor => {:language => 'ru'} %>
  </p>
  <p class="actions">
    <%= f.submit action_name == 'new' ?  'Создать страницу' : 'Редактировать страницу' %>
  </p>
<% end %>
