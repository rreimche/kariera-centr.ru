<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Short descr</th>
      <th>Full descr</th>
      <th>Start date</th>
      <th>Full price</th>
      <th>Timegroup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.short_descr %></td>
        <td><%= course.full_descr %></td>
        <td><%= course.start_date %></td>
        <td><%= course.full_price %></td>
        <td><%= course.timegroup %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

